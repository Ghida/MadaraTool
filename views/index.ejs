<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex" />
    <title>ISEKAI - CRAWLER</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/skins/square/blue.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="container-fluid">
        <nav>
            <div class="nav-wrapper">
                <a href="#!" class="brand-logo center">TOOL for isekaiscan.com</a>
                <ul class="left hide-on-med-and-down">
                    <li><a href="/">TOP 80 Latest Manga</a></li>
                    <li class="active"><a href="/page/1">Latest Paged 1</a></li>
                    <% if(currentPage !== '') { %>
                    <li><a href="/page/<%= parseInt(currentPage) + 1 %>">Next Paged</a></li>
                    <% } %>
                </ul>
            </div>
        </nav>
        <div class="container">
            <form action="/leech-link" method="get" class="row valign-wrapper">
                <div class="input-field col s9">
                    <input type="url" class="validate" required name="link" aria-label="" id="link" value="">
                    <label for="link">Link crawl</label>
                    <span class="helper-text" data-error="Please insert valid url!!!" data-success="Right! Click button [Leech Url] to start crawl manga now.">Enter detail manga link</span>
                </div>
                <div class="col s3"><button class="btn waves-effect waves-light" type="submit" name="action">Leech Url
                <i class="material-icons right">send</i>
                </button></div>
            </form>
        </div>
        <div class="row">
            <form action="/leech" method="get" class="col s12">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h4 class="panel-title">List Manga Updates</h4>
                    </div>

                    <div class="fixed-action-btn">
                        <button type="submit" class="btn btn-primary btn-large btn-floating pulse">Start</button>
                    </div>

                    <div class="panel-body">
                        <table class="responsive-table">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col"><input aria-label="" type="checkbox" class="check-all"></th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Title</th>
                                    <th scope="col" class="center">Leeched / Total</th>
                                    <th scope="col" class="center">Latest Chapter</th>
                                    <th scope="col" class="center">Is Leeched</th>
                                    <th scope="col">Source</th>
                                    <th scope="col" class="center">Total Votes</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% list.forEach(function(item) { %>
                                    <tr>
                                        <td>
                                            <input name="id[]" aria-label="" value="<%=item.episode%>" type="checkbox" class="filled-in check-item">
                                        </td>
                                        <td>
                                            <img src="<%=item.image %>" class="img-thumbnail" style="width: 100px;" alt="">
                                        </td>
                                        <td>
                                            <a target="_blank" href="<%=item.link%>">
                                                <%=item.title%>
                                            </a>
                                        </td>
                                        <td class="center">
                                            <%=item.chapter_count%>/
                                                <%=item.total_chapter%>
                                        </td>
                                        <td class="center">
                                            <%=item.last_chapter%>
                                        </td>
                                        <td class="center">
                                            <%=(item.is_leeched ? 'Yes' : '')%>
                                        </td>
                                        <td>
                                            <%=item.last_leech %>
                                        </td>
                                        <td class="center">
                                            <%=item.total_vote%>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
            <div class="col s12">
                <% if(currentPage !== '') { %>
                    <ul class="pagination center">
                        <% for (var i=1; i<10 ; i++ ) { %>
                            <li class="waves-effect <%= (currentPage == i - 1) ? 'active' : '' %>">
                                <a href="/page/<%= i %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>
                                <li class="waves-effect"><a href="/page/<%= parseInt(currentPage) + 1 %>">... Next</a>
                                </li>
                    </ul>
                    <% } %>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/icheck.min.js"></script>
    <script src="/js/script.js"></script>
</body>

</html>